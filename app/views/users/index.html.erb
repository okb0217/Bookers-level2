<div class="container">
    	<div class="row">
    		<div class="col-xs-3">

				<%= render 'users/list', user: @user, book: @book %>

			</div>

			<div class="col-xs-9">
				<h2>Users</h2>
				<table class="table table-striped">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th></th>
						</tr>
					</thead>
					<% @users.each do |user| %>
					<tbody>
						<tr>
							<td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
							</td>
							<td><%= user.name %></td>
							<td><%= link_to "Show",user_path(user.id) %></td>
						</tr>
					</tbody>
					<% end %>
				</table>
			</div>
		</div>
</div>