<body>

  <% if flash[:notice] %>
      <div class="flash">
        <p><%= flash[:notice] %></p>
      </div>
    <% end %>

<div class="container">
      	<div class="row">
  			<div class="top-message col-md-offset-3 col-md-6">
    			<h1>welcome to <span class="glyphicon glyphicon-book"><strong>Bookers</strong>  !!</span></h1>
         		 <p>In  <span class="glyphicon glyphicon-book"></span><strong>Bookers</strong>, </p>
          		 <p>you can share and exchange  your opinions , inpressions , and emotions</p>
          		 <p> about various books!</p>

    		<div class="btn-wrapper">
          <% if user_signed_in? %>
      			<div class="row">
              <button class="btn btn-info col-xs-10 col-xs-offset-1">
         			<%= link_to "Log in", user_path(@user) %>
              </button>
      			</div>
      			<div class="row">
              <button class="btn btn-success col-xs-10 col-xs-offset-1">
        			<%= link_to "Sign up", user_path(@user) %>
              </button>
        		</div>

            <% else %>

            <div class="row">
              <button class="btn btn-info col-xs-10 col-xs-offset-1">
              <%= link_to "Log in", new_user_session_path %>
              </button>
            </div>
            <div class="row">
              <button class="btn btn-success col-xs-10 col-xs-offset-1">
              <%= link_to "sign up", new_user_registration_path %>
              </button>
            </div>

            <% end %>

    		</div>
 		</div>
</div>
</body>





