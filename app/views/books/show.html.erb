<body>
    <% if flash[:notice] %>
      <div class="flash">
        <p><%= flash[:notice] %></p>
      </div>
    <% end %>
	<div class="container">
    	<div class="row">
    		<div class="col-xs-3">

                <%= render 'users/list', user: @user, book: @book_new %>
    		</div>
                <div class="col-xs-9">
                    <h2>Book detail</h2>
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <td><%= link_to user_path(@user) do %>
                                        <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg",size:'40x40' %>
                                        <% end %>
                                        <%= link_to "#{@user.name}", user_path(@user) %>
                                    </td>
                                        <td><%= link_to "#{@book.title}",book_path(@book.id) %></td>
                                        <td><%= @book.body %></td>

                                        <% if @book.user.id == current_user.id %>
                                        <td><%= link_to "Edit",edit_book_path(@book)%></td>
                                        <td><%= link_to "Destroy", book_path(@book), method: :delete,"data-confirm" => "Are you sure?" %></td>

                                        <% end %>
                                </tr>
                            </tbody>
                        </table>
                </div>

</body>

















